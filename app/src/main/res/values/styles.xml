<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="def_dragview">
        <item name="seek_bg_color">#e6e6e6</item>
        <item name="seek_pb_color">#8ace00</item>
        <item name="seek_ball_solid_color">#ffffff</item>
        <item name="seek_ball_stroke_color">#e6e6e6</item>
        <item name="seek_text_color">#666666</item>
        <item name="seek_text_size">12sp</item>
    </style>

    <style name="def_switch_view">
        <item name="switch_bg_close_color">#666666</item>
        <item name="switch_bg_open_color">#8ace00</item>
        <item name="switch_strock_color">#e6e6e6</item>
        <item name="switch_ball_color">#ffffff</item>
        <item name="switch_ball_shadow_color">#ff00ee</item>
        <item name="switch_bg_strock_width">2dp</item>
    </style>

    <style name="def_countdown_circle_view">
        <item name="circle_bg_color">#90000000</item>
        <item name="circle_pb_color">#8ace00</item>
        <item name="circle_pb_width">1dp</item>
        <item name="circle_text_color">#ffffff</item>
        <item name="circle_text_size">12sp</item>
    </style>


    <style name="def_and_text_layout">
        <item name="and_text_color">#ffffff</item>
        <item name="and_text_size">14</item>
        <item name="and_text_anim_up">false</item>
        <item name="and_text_anim_down">false</item>
        <item name="and_text_anim_left">false</item>
        <item name="and_text_anim_right">false</item>
        <item name="and_text_anim_duration_second">4</item>
        <item name="and_text_background_color">#00000000</item>
        <item name="and_text_desc">滚动吧~~我的滚动条\n~~翻腾吧~~我曹</item>
    </style>
</resources>
